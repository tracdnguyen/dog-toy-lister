<h2>Add a new favorite toy!</h2>
<form action="/toys" method="POST">
  <% if flash.has?(:error) %>
    <%= flash[:error] %>
  <% end %>
  <p>Name: <input type="text" name="name" required></p>
  <p>URL: <input type="url" name="url" required></p>
  <p>Image URL (Optional): <input type="url" name="image_url"></p>
  <p>Price: $<input type="number" name="price" step="0.01" required></p>
  <input type="submit" value="submit">
</form>
