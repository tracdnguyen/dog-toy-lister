<% if flash.has?(:error) %>
  <%= flash[:error] %>
<% end %>
<p> Welcome, <%= current_user.username %></br>
<a href="/users/<%=current_user.id%>"> View Your Toys </a></br>
<h2> Everyone's favorite toys are here! </h2>

<% @toys.each do |toy| %>
  <div>
    <%= toy.name %></br>
    <a href="<%=toy.url%>"><%= toy.url %></a></br></br>
  </div>
<% end %>

</br>

<a href="/logout"> Log Out </a>


<table>

  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>URL</th>
    <th>Price</th>
  </tr>
  <% for toy in @toys %>
  <tr>
    <td><img src="<%= toy.image_url %>" alt="photo of toy" ></td>
    <td><%= toy.name %></td>
    <td><%= toy.url %></td>
    <td>$<%= toy.price %></td>
  </tr>
    <% end %>
</table>
