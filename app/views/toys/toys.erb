<div class="container">
  <% if flash.has?(:error) %>
    <%= flash[:error] %>
  <% end %>
  <h2> Everyone's favorite toys are here! </h2>

  <table>

    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>URL</th>
      <th>Price</th>
    </tr>
    <% for toy in @toys %>
    <tr>
      <td><%= toy.name %></td>
      <td><img src="<%= toy.image_url %>" alt="photo of toy" ></td>
      <td><a href="<%= toy.url %>"><%= toy.url %></td>
      <td>$<%= toy.price %></td>
    </tr>
      <% end %>
  </table>
</div>